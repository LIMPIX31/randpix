    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "declarationDir": "./lib/typings",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
